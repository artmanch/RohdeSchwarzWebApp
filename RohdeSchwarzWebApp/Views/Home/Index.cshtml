@model AmperageViewModel

@{
    ViewData["Title"] = "Главная";
}

<div>
    <h1>Работа с источником питания</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SetAmperage" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Amperage" class="control-label"></label>
                    <input asp-for="Amperage" class="form-control" />
                    <span asp-validation-for="Amperage" class="text-danger"></span>
                </div>

                <input type="submit" value="Установить ток" class="btn btn-primary" />
            </form>
        </div>

        <div class="col-md-4"></div>

        <div class="col-md-4">

            <div id="panel-server"></div>

            <a class="btn btn-default" 
               style="color: #fff; background-color: #428bca; border-color: #357ebd;"
               data-ajax="true"
               data-ajax-url="@Url.Action("GetAmperage", "Home")"
               data-ajax-loading="#spinner-server"
               data-ajax-update="#panel-server">
                Считать ток
            </a>

            <span id="spinner-server" style="display:none">
                <i class="fa fa-spinner fa-spin"></i>
            </span>
        </div>
    </div>

</div>
